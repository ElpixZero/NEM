<% include layout/header.ejs %>
<div class="main">
  <div class="container">
    <div class="content">

      <% if (!posts) { %>
        <h3>Нет постов. Самое время создать!</h3>
      <% } else { %>

      <% posts.forEach( post => { %>
        <div class="post">
            <div class="top">
                <h2><a href="/posts/<%= post.url %>"><%= post.title %></a></h2>
            </div>
            <div class="body">
              <p class="mainView"><%= post.body %></p>
            </div>
            <div class="bottom">
              <div class="author">
                Author: <a href="/users/<%= post.owner.login  %>"><%= post.owner.login %></a>
              </div>
                <a href="/">Comments</a>
            </div>
          </div>
      <% }) %>

      <div class="pagination">
        <% if  (current == 2) { %>
          <a class="toMain" href="/">На главную</a>
        <% } %>

        <% if (current > 2) { %>
          <a class="toNew" href="/archieve/<%=current - 1 %>">К новым</a>
        <% } %>

        <% if  (pages > 0 && current < pages) { %>
          <a class="toOld" href="/archieve/<%=current + 1 %>">К старым</a>
        <% } %>
      </div>
      <% } %>
    </div>

    <% include layout/sidebar.ejs %>
  </div>
</div>

<% include layout/footer.ejs %>
