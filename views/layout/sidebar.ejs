<div class="sidebar">
  <div class="box auth">

    <form method='post' class="login">
      <h2>Log in</h2>
      <div class="form-group">
        <label for="login-login">Login</label>
        <input type="text" id='login-login' name='login'>
      </div>
      <div class="form-group">
        <label for="login-password">Password</label>
        <input type="password" id='login-password' name='password'>
      </div>
      <div class="buttons">
        <button class='switch-button secondary-inverse' type='submit'>Sign up</button>
        <button class='login-button' type='submit'>Log in</button>
      </div>
    </form>

    <form method='post' class="register">
        <h2>Sign up</h2>
        <div class="form-group">
          <label for="register-login">Login</label>
          <input type="text" id='register-login"' name='login'>
        </div>
        <div class="form-group">
          <label for="register-password">Password</label>
          <input type="password" id='register-password' name='password'>
        </div>

        <div class="form-group">
          <label for="register-password-confirm">Confrim password</label>
          <input type="password" id='register-password-comfirm' name='password-confirm'>
        </div>

        <div class="buttons">
          <button class='switch-button secondary-inverse' type='submit'>Log in</button>
          <button class='login-button' type='submit'>Sign up</button>
        </div>
      </form>
  </div>

  <div class="box"></div>
</div>